generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id Int @id @default(autoincrement())
  sub String @unique
  email String @unique
  name String
  picture String
  login_at DateTime @default(now())
  created_at DateTime @default(now())
}

model RefreshToken {
  id String @id
  token String @unique
  expires_at DateTime @default(dbgenerated("NOW() + INTERVAL '14 days'"))
}